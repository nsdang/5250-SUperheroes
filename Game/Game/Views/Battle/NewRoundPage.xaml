<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Game.Views.NewRoundPage">

    <ContentPage.Content>

        <ScrollView VerticalScrollBarVisibility="Never" HorizontalScrollBarVisibility="Never">
            <StackLayout>
                <Label Text="Starting Round" Style="{StaticResource CenterMessageLargeStyle}"/>

                <Label Text="Teams"
                   TextDecorations="Underline"/>

                <FlexLayout x:Name="PartyListFrame"
                        JustifyContent="Start"
                        AlignContent="Start"
                        Wrap="Wrap"/>

                <Label Text="Enemies"
                   TextDecorations="Underline"/>

                <FlexLayout x:Name="MonsterListFrame"
                        JustifyContent="Start"
                        AlignContent="Start"
                        Wrap="Wrap"/>

                <Button Clicked="BeginButton_Clicked" Text="Start Round"/>
                <Button Clicked="TeamsButton_Clicked" Text="Teams"/>

            </StackLayout>
        </ScrollView>
    </ContentPage.Content> 
</ContentPage>