<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Game.Views.PickItemsPage"
             >

    <ContentPage.Content>
        <StackLayout>
            <Label Text="Rewards"
                   Style="{StaticResource CenterMessageLargeStyle}"></Label>

            <Label Text="Unique Items" TextDecorations="Underline"/>

            <Label Text="Common Items" TextDecorations="Underline"/>

            <Label Text="Equip on?" TextDecorations="Underline"/>

            <Label Text="Chosen Character: "></Label>
           

            <Button Clicked="CloseButton_Clicked" Text="Close"></Button>
        </StackLayout>
        
    </ContentPage.Content>
</ContentPage>